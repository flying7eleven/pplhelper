<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.halcyonwaves.apps.pplhelper.fragments.FlightTimeCalculationFragment"
              android:orientation="vertical">

    <TextView
            android:text="Flight hours (before):"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editFlightHoursBrefore"
            android:inputType="numberDecimal" />

    <TextView
            android:text="Flight hours (after):"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editFlightHoursAfter"
            android:inputType="numberDecimal"/>

    <TextView
            android:text="Start time (local):"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLocalStartTime"
            android:inputType="time"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCalcInformation"
            android:text="Calculate information"/>

</LinearLayout>
